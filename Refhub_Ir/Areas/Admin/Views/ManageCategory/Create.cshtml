@using Refhub_Ir.Models.Categories
@model CreateCategoryVM

@{
    Layout = "_AdminLayout";
    ViewBag.TitleHeaderPage = "ایجاد دسته‌بندی جدید";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">ایجاد دسته‌بندی</h3>
                    </div>
                    <form asp-area="Admin" asp-controller="ManageCategory" asp-action="Create" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="text-danger px-5"></div>
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="Name">نام دسته‌بندی</label>
                                <input asp-for="Name" type="text" class="form-control" placeholder="نام دسته‌بندی را وارد کنید">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Slug">Slug</label>
                                <input asp-for="Slug" type="text" class="form-control" placeholder="Slug را وارد کنید">
                                <span asp-validation-for="Slug" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Description">توضیحات</label>
                                <textarea asp-for="Description" class="form-control" placeholder="توضیحات را وارد کنید"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">ذخیره</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}