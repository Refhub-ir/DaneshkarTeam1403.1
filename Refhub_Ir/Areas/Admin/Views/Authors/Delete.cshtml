@model Refhub_Ir.Areas.Admin.DTOs.AuthorVM

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "حذف نویسنده";
}

<div class="d-flex justify-content-center mt-5">
    <div class="card shadow p-4 text-center" style="width: 500px;">
        <h4 class="text-danger mb-4">حذف نویسنده</h4>
        <p class="mb-3">آیا مطمئن هستید که می‌خواهید نویسنده زیر را حذف کنید؟</p>

        <table class="table table-bordered table-sm">
            <tr>
                <th>نام کامل</th>
                <td>@Model.FullName</td>
            </tr>
            <tr>
                <th>اسلاگ</th>
                <td>@Model.Slug</td>
            </tr>
        </table>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Slug" />

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="ListAuthors" class="btn btn-secondary">انصراف</a>
                <button type="submit" class="btn btn-danger">حذف نویسنده</button>
            </div>
        </form>
    </div>
</div>
