@using Refhub_Ir.Models.DTO.Keyword
@model EditKeywordVM
@{
    ViewData["Title"] = "ویرایش کلیدواژه";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>ویرایش کلیدواژه</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="card card-warning">
            <div class="card-header">
                <h3 class="card-title">فرم ویرایش کلیدواژه</h3>
            </div>
            <form asp-area="Admin" asp-controller="ManageKeyword" asp-action="EditKeyword" method="post">
                <div class="card-body">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Word">کلمه کلیدی</label>
                        <input asp-for="Word" class="form-control" />
                        <span asp-validation-for="Word" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-warning">ویرایش</button>
                    <a asp-action="ListKeyword" class="btn btn-secondary">بازگشت</a>
                </div>
            </form>
        </div>
    </div>
</section>
