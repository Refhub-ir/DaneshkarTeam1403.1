@using Refhub_Ir.Models.DTO.Keyword
@model List<KeywordListVM>
@{
    ViewData["Title"] = "لیست کلیدواژه‌ها";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>لیست کلیدواژه‌ها</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">جدول کلیدواژه‌ها</h3>
            </div>
            <div class="card-footer clearfix">
                <a asp-action="CreateKeyword" class="btn btn-primary">افزودن کلیدواژه جدید</a>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-sm align-middle">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>کلمه کلیدی</th>
                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@Model[i].Word</td>
                                <td>
                                    <a asp-area="Admin" asp-controller="ManageKeyword" asp-action="EditKeyword" asp-route-id="@Model[i].Id" class="btn btn-sm btn-warning">ویرایش</a>
                                    <a asp-action="DeleteKeyword" asp-route-id="@Model[i].Id" class="btn btn-sm btn-danger" onclick="return confirm('آیا مطمئن هستید که می‌خواهید حذف کنید؟');">حذف</a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer clearfix">
                <ul class="pagination pagination-sm m-0 float-right">
                    <li class="page-item"><a class="page-link" href="#">«</a></li>
                    <li class="page-item"><a class="page-link" href="#">۱</a></li>
                    <li class="page-item"><a class="page-link" href="#">۲</a></li>
                    <li class="page-item"><a class="page-link" href="#">۳</a></li>
                    <li class="page-item"><a class="page-link" href="#">»</a></li>
                </ul>
            </div>
         
        </div>
    </div>
</section>




