@using Refhub_Ir.Models.DTO.Keyword
@model List<KeywordListVM>
@{
    ViewData["Title"] = "لیست کلیدواژه‌ها";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>لیست کلیدواژه‌ها</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">جدول کلیدواژه‌ها</h3>
            </div>

            <div class="card-footer clearfix">
                <a asp-action="CreateKeyword" class="btn btn-primary">افزودن کلیدواژه جدید</a>
            </div>

            <div class="card-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th style="width: 10px">#</th>
                            <th>کلمه کلیدی</th>
                            <th style="width: 150px">عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@Model[i].Word</td>
                                <td>
                                    <a asp-action="EditKeyword"
                                       asp-route-id="@Model[i].Id"
                                       class="btn btn-sm btn-warning">ویرایش</a>

                                    <a asp-action="DeleteKeyword"
                                       asp-route-id="@Model[i].Id"
                                       class="btn btn-sm btn-danger"
                                       onclick="return confirm('آیا مطمئن هستید که می‌خواهید حذف کنید؟');">حذف</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

          
        </div>
    </div>
</section>
