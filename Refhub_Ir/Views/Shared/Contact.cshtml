                    </div>

                    <div class="mb-4 bg-light-input">
                        @Html.Label("Email", "Email address *", new { @class = "form-label" })
                        @Html.TextBox("Email", null, new { @class = "form-control form-control-lg", type = "email", required = "required" })
                    </div>

                    <div class="mb-4 bg-light-input">
                        @Html.Label("Message", "Message *", new { @class = "form-label" })
                        @Html.TextArea("Message", null, new { @class = "form-control", rows = "4", required = "required" })
                    </div>

                    <div class="d-grid">
