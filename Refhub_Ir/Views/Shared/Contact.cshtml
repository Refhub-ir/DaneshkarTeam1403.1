            <div class="container">
                @using (Html.BeginForm("SubmitContact", "Home", FormMethod.Post, new { @class = "contact-form" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="mb-4 bg-light-input">
                        @Html.Label("Name", "Your name *", new { @class = "form-label" })
