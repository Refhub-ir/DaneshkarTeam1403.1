@model Refhub_Ir.Models.Books.BookDetailsVM

@{
    Layout = "_Layout";
    ViewData["Title"] = Model.Title;
}

<section class="pt-3 pt-xl-5">
    <div class="container" data-sticky-container>
        <div class="row g-4">
            <!-- Main content START -->
            <div class="col-xl-8">
                <div class="card border rounded-3">
                    <!-- Card header -->
                    <div class="card-header border-bottom">
                        <h3 class="mb-0 fs-5">@Model.Title</h3>
                    </div>
                    <!-- Card body -->
                    <div class="card-body">
                        @if (Model.BookAuthors?.Any() == true)
                        {
                            <p><strong>نویسنده:</strong> @string.Join(", ", Model.BookAuthors.Select(a => a.Author?.FullName ?? "ناشناس"))</p>
                        }
                        else
                        {
                            <p><strong>نویسنده:</strong> بدون نویسنده</p>
                        }
                        @if (Model.BookKeywords?.Any() == true)
                        {
                            <p><strong>کلیدواژه‌ها:</strong> @string.Join(", ", Model.BookKeywords.Select(k => k.Keyword?.Word ?? "بدون کلیدواژه"))</p>
                        }
                        else
                        {
                            <p><strong>کلیدواژه‌ها:</strong> بدون کلیدواژه</p>
                        }
                        <p><strong>کتاب‌های مرتبط:</strong></p>
                        <ul>
                            @if (Model.RelatedTo?.Any() == true)
                            {
                                foreach (var relatedBook in Model.RelatedTo)
                                {
                                    <li>
                                        <a asp-controller="Book" asp-action="Details" asp-route-slug="@relatedBook.RelatedBook?.Slug">
                                            @(relatedBook.RelatedBook?.Title ?? "بدون عنوان")
                                        </a>
                                    </li>
                                }
                            }
                            else
                            {
                                <li>بدون کتاب مرتبط</li>
                            }
                        </ul>

                        <hr />

                        <h4 class="mb-3">دانلود فایل‌ها</h4>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div>
                                @if (!string.IsNullOrEmpty(Model.FilePath))
                                {
                                    <a href="@Url.Action("DownloadFile", "Book", new { filePath = Model.FilePath })" class="btn btn-primary">دانلود فایل اصلی کتاب</a>
                                }
                                else
                                {
                                    <p class="text-warning">فایل اصلی کتاب در دسترس نیست.</p>
                                }
                            </div>
                            <div class="mt-3">
                                @if (Model.RelatedTo?.Any() == true)
                                {
                                    <h5>فایل‌های مرتبط:</h5>
                                    <ul>
                                        @foreach (var relatedBook in Model.RelatedTo)
                                        {
                                            @if (!string.IsNullOrEmpty(relatedBook.RelatedBook?.FilePath))
                                            {
                                                <li>
                                                    <a href="@Url.Action("DownloadFile", "Book", new { filePath = relatedBook.RelatedBook.FilePath })" class="btn btn-secondary">
                                                        دانلود فایل: @(relatedBook.RelatedBook?.Title ?? "بدون عنوان")
                                                    </a>
                                                </li>
                                            }
                                            else
                                            {
                                                <li>@(relatedBook.RelatedBook?.Title ?? "بدون عنوان") (فایل در دسترس نیست)</li>
                                            }
                                        }
                                    </ul>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-danger">برای دانلود فایل‌ها، لطفاً <a asp-controller="Account" asp-action="Login">وارد شوید</a>.</p>
                        }
                    </div>
                </div>
            </div>
            <!-- Main content END -->
            <!-- Right sidebar START -->
            <div class="col-xl-4">
                <div data-sticky data-margin-top="80" data-sticky-for="768">
                    <div class="row g-4">
                        <!-- Book info -->
                        <div class="col-md-6 col-xl-12">
                            <div class="card card-body border p-4">
                                <h4 class="mb-3 fs-5">مشخصات کتاب</h4>
                                <ul class="list-group list-group-borderless">
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span class="h6 fw-light mb-0"><i class="fas fa-fw fa-book-open text-primary"></i>عنوان</span>
                                        <span>@Model.Title</span>
                                    </li>
                                    @if (Model.BookAuthors?.Any() == true)
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <span class="h6 fw-light mb-0"><i class="fas fa-fw fa-user text-primary"></i>نویسنده</span>
                                            <span>@string.Join(", ", Model.BookAuthors.Select(a => a.Author?.FullName ?? "ناشناس"))</span>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                        <!-- Tags -->
                        <div class="col-md-6 col-xl-12">
                            <div class="card card-body border p-4">
                                <h4 class="mb-3 fs-5">برچسب‌ها</h4>
                                <ul class="list-inline mb-0">
                                    @if (Model.BookKeywords?.Any() == true)
                                    {
                                        foreach (var keyword in Model.BookKeywords)
                                        {
                                            <li class="list-inline-item">
                                                <a class="btn btn-outline-light btn-sm" href="#">@keyword.Keyword?.Word</a>
                                            </li>
                                        }
                                    }
                                    else
                                    {
                                        <li class="list-inline-item">بدون برچسب</li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Right sidebar END -->
        </div>
    </div>
</section>